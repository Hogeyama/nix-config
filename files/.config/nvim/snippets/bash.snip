include sh.snip

snippet if
	if [[ ${1:#:condition} ]]; then
		${0:TARGET}
	fi

snippet set-safe
	set -eu
	set -o pipefail

snippet     parsearg
options     head
	while [[ $# -gt 0 ]]; do
	  case \$1 in
	    ${1})
	      ${2}
	      ;;
	    *)
	      ;;
	  esac
	  shift
	done

snippet     process-substiturion-in
abbr        <()
alias       psi
options     word
	<(${1})${0}

snippet     process-substiturion-out
abbr        >()
alias       pso
options     word
	>(${1})${0}

